<div class="container">
    <div class="buttons">
        <button class="button">
            Criar diretório
        </button>
        <button class="button">
            Carregar arquivo
        </button>
        <button class="button is-danger">
            Excluir diretório
        </button>
    </div>
    <div class="box">
        <div class="card-table">
            <div class="content">
                <table class="table is-fullwidth is-striped">
                    <tbody class="body">
                        <% @directories.each do |directory| %>
                            <tr>
                                    <td><i class="fa fa-folder-o"></i></td>
                                    <td><a href="<%= request.fullpath.split('?')[0] + directory %>/"><%= directory %></a></td>
                            </tr>
                        <% end%>
                        <% @files.each do |file| %>
                            <tr>
                                <td><i class="fa fa-file-o"></i></td>
                                <td><a href="<%= request.fullpath.split('?')[0] + file %>"><%= file %></a></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>